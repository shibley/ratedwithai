# ===========================================
# RatedWithAI Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# App URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Clerk Authentication
# ===========================================
# Get these from https://dashboard.clerk.com
# 1. Create a new application
# 2. Copy the API keys from the "API Keys" section

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Clerk redirect URLs (optional, defaults work for most cases)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ===========================================
# Stripe Payments
# ===========================================
# Get these from https://dashboard.stripe.com
# Use test keys for development (start with sk_test_ and pk_test_)

STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe Webhook Secret
# Get this when you create a webhook endpoint in Stripe Dashboard
# For local testing, use Stripe CLI: stripe listen --forward-to localhost:3000/api/webhook
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs
# Create products and prices in Stripe Dashboard, then copy the price IDs
# Format: price_xxx
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_BUSINESS_PRICE_ID=price_xxx

# ===========================================
# Database (if needed in future)
# ===========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/ratedwithai

# ===========================================
# Optional: Email notifications
# ===========================================
# RESEND_API_KEY=re_xxx
